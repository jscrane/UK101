BOARD := node32s
UPLOAD_SPEED := 921600
TERM_SPEED := 115200
CPPFLAGS = -DCPU_DEBUG -DUSER_SETUP_LOADED -DILI9163_DRIVER -DTFT_CS=5 -DTFT_DC=2 \
        -DTFT_MOSI=23 -DTFT_SCLK=18 -DTFT_MISO=-1 -DTFT_RST=-1 \
        -DTFT_WIDTH=240 -DTFT_HEIGHT=320 \
        -DSPI_FREQUENCY=40000000 -DLOAD_GLCD

uk101: CPPFLAGS += -DUK101
uk101: SPIFFS_DIR := uk101/programs
uk101: all fs

ohio: CPPFLAGS += -DOHIO
ohio: SPIFFS_DIR := ohio/programs
ohio: all fs

include arduino-esp32.mk
