 260 C=C+1:POKEC,226:POKEC-1,32:NEXT
 300 P=PEEK(A):IFP<2ORP>7THEN400
 301 IF F=1 THEN 400
 352 FL=`84:F=1
 305 IF P=7 THEN 375
 310 IF P=3 THEN  325
 315 FOR FF=55007TO54992STEP-1:POKEFF,FL:GOSUB400:NEXT
 320 FORFF=54992TO55007:POKEFF,154:GOSUB400:NEXT:F=0:GOTO300
 325 FORFF=55008TO55023:POKEFF,FL:GOSUB400:NEXTFF
 330 FORFF=55023TO55008STEP-1:POKEFF,154:GOSUB400:NEXT
 335 F=0:GOTO300
 340 IF F=1 THEN RETURN
 360 GOTO 300
 375 F1=55007:F2=F1+1:FORFF=0TO15:POKEF1-FF,FL:POKE2+FF,FL
 380 GOSUB400:NEXT
 390 FORFF=15TO0STEP-1:POKE1-FF,154:POKE2+FF,154:GOSUB400:NEXT
 395 F=0:GOTO300
 400 C=C+D:IFPEEK(C)<>32THENP=PEEK(C):C=C-D:GOTO500
 401 X=2*RND(1):IFX>.5THENX=64
 402 IF X<.5THENX=-64
 420 POKEC,226:POKEC-D,32
 421 DC=DC+1:IF DC<>10 THEN 440
 422 DC=0
 425 IF PEEK(C+X)<>32THEN440
 430 C=C+X:POKEC,226:POKEC-X,32
 440 IF F=1 THEN RETURN
 460 GOTO 300
 500 IF P=154THENPOKEC,32:GOTO200
 501 IFP=128THENC=C-128:POKEC,226:POKEC+128,32:DD=-D:GOTO400
 505 IFP<>FLTHEN540
